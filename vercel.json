{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/app-ads.txt",
      "dest": "/public/app-ads.txt",
      "headers": {
        "Content-Type": "text/plain"
      }
    },
    {
      "src": "/styles.css",
      "dest": "/public/styles.css",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
